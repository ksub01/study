#include <iostream>

using namespace std;

bool IsDigit(char c){
    return ((c >= '0') and (c <= '9'));
}

int main(){
    char a;
    cin >> a;
    if (IsDigit(a))
        cout << "yes";
    else
        cout << "no";
}
