var
n,i:integer;
a:array[0..100] of integer;
begin
read(n);
for i:=0 to n-1 do
  read(a[i]);
for i:=0 to n-1 do begin
  if a[i] mod 2=0 then
    write(a[i],' ');
end;
end.
