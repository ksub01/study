b1 = int(input())
mas = input().split(' ')
mas = [int(x) for x in mas]
for i in range(int(b1)):
    if i % 2 == 0:
        print(mas[i], end = ' ')



Найди ошибку: Вывести четные элементы
#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

int main()
{
    ll n;
    cin >> n;
    ll a[100001];
    for(int i = 0; i < n; i++)
        cin >> a[i];
    for(int i = 0; i < n; i = i + 2)
        if(a[i] % 2 == 0)
            cout << a[i] << ' ';

}



Хорошие решения
N=int(input())
a = input().split()
for i in range(N):
    a[i]=int(a[i])
    if a[i]%2==0:
        print(a[i])
