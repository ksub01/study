#include <iostream>
#include <algorithm>
#include <cmath>
#include <vector>
#include <string>
#include <iomanip>

using namespace std;

int main()
{
    int h,m,s;
    cin >> h >> m >> s;
    s = s + h * 60 * 60 + m * 60;
    double grad;
    grad = ((360.0 / 3600.0) / 12.0);
    cout << grad * s;
    return 0;
}
