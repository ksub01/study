Найди ошибку: Часы - 1
#include <iostream>
#include <list>
#include <algorithm>
#include <cmath>
using namespace std;

int main() {
	double S, M, H, grad;
	cin >> H >> M >> S;
	grad = 360 / 12 * H + M * (360 / 12 / 60) + S / 120;
	cout << grad;
	return 0;
}


Хорошие решения
var
  H,M,S,n,k,l,a:double;
begin
  readln(H,M,S);
  n:=(360/12);
  k:=(n/60);
  l:=(k/60);
  a:=(H*n+M*k+S*l);
  write(a);
end.
