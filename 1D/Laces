#include <stdio.h>
#include <math.h>
main()
{
    int a,b,l,N,dlina;
    scanf("%d%d", &a, &b);
    scanf("%d%d", &l, &N);
    dlina=2*a*(N-1)+2*b*(N-1)+2*l+a;
    printf("%d", dlina);
}
