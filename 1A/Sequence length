Хорошие решения
#include <iostream>
using namespace std;

int main()
{
	int a, res = 0;
	cin >> a;

	while (a != 0)
	{
		res++;
		cin >> a;
		if (a == 0) break;
	}

	cout << res;

	return 0;
}
