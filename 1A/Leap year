//#include "stdafx.h"
#include <iostream>
//#include <windows.h>

//using namespace std;


int main()
{
	// Input
	int year;
	std::cin >> year;

	// Output
	if (year % 400 == 0 || (year % 4 == 0 && year % 100 != 0))
		std::cout << "YES" << std::endl;
	else
		std::cout << "NO" << std::endl;

	return 0;
}


