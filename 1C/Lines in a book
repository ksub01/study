#include <iostream>

using namespace std;

int main()
{
	int k, n, k1, n1;
	cin >> k >> n;
	k1 = (n - 1) / k + 1;
	n1 = (n - 1) % k + 1;
	cout << k1 << " " << n1 << endl;
}
